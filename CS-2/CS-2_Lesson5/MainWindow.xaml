<Window x:Class="CS_2_Lesson5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:CS_2_Lesson5"
        mc:Ignorable="d"
		MinHeight="500"
		MinWidth="500"
        Title="MainWindow" Height="450" Width="800"
		Background="{DynamicResource WindowBackgroundBrush}">
	<Window.Resources>
		<sys:String x:Key="Company">Panarin Company</sys:String>
		<LinearGradientBrush x:Key="WindowBackgroundBrush">
			<GradientStop Offset="0" Color="Silver"/>
			<GradientStop Offset="1" Color="AliceBlue"/>
		</LinearGradientBrush>
	</Window.Resources>
	<!--MouseUp="MainGrid_MouseUp" это в Grid после Name-->
	<Grid Name="MainGrid">
		<Grid.RowDefinitions>
			<RowDefinition Height="50"/>
			<RowDefinition Height="50"/>
			<RowDefinition/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="250"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>
		<TextBlock x:Name="textBlock" 
				   HorizontalAlignment="Right" 
				   Margin="0,0,10,10" 
				   TextWrapping="Wrap" 
				   Text="Фамилия И.О.: "
				   FontSize="22"
				   VerticalAlignment="Bottom" Height="30" Width="230"/>
		<TextBlock x:Name="textBlock4"
				   HorizontalAlignment="Left"
				   Margin="10,10,0,0" 
				   Grid.Row="1" 
				   TextWrapping="Wrap"
				   Text="Департамент: " 
				   FontSize="22"
				   VerticalAlignment="Top" 
				   Height="30" Width="230"/>
		<ComboBox x:Name="cbEmployee"
				   ItemsSource="{Binding Path=workers}"
				   ToolTip="Выбирите Сотрудника"
				   IsEditable="True"
				   StaysOpenOnEdit="True"
				   SelectionChanged="cbEmployee_SelectionChanged"
				   FontSize="22"
				   Grid.Column="1" 
				   HorizontalAlignment="Left" 
				   Height="30" Margin="8,10,0,0" 
				   VerticalAlignment="Top" 
				   Width="524">
			<ComboBox.ItemTemplate>
				<DataTemplate>
					<TextBlock>
						<TextBlock.Text>
							<MultiBinding StringFormat=" {0} | {1}">
								<Binding Path="SurName"/>
								<Binding Path="Name"/>
							</MultiBinding>
						</TextBlock.Text>
					</TextBlock>
				</DataTemplate>
			</ComboBox.ItemTemplate>
		</ComboBox>
		<ComboBox x:Name="cbDepartment"
				 ItemsSource="{Binding Path=departments}"
				 FontSize="22"
				 Grid.Column="1" 
				 HorizontalAlignment="Left" 
				 Height="30" 
				 Margin="6,10,0,0"
				 Grid.Row="1" 
				 VerticalAlignment="Top" 
				 Width="524"
				 ToolTip="Выбирите Департамент"
				 SelectionChanged="cbDepartment_SelectionChanged">
			<ComboBox.ItemTemplate>
				<DataTemplate>
					<TextBlock Text="{Binding Path=DepartmentName}"/>
				</DataTemplate>
			</ComboBox.ItemTemplate>
		</ComboBox>
		<ListView x:Name="listWorkers"
				  ItemsSource="{Binding Path=workers}" 
				  HorizontalAlignment="Left" 
				  Height="303" 
				  Margin="8,10,0,0" 
				  Grid.Row="3"
				  VerticalAlignment="Top" 
				  Width="774" Grid.ColumnSpan="2" Grid.RowSpan="2" 
				  SelectionChanged="listWorkers_SelectionChanged">
			<ListView.View>
				<GridView>
					<GridViewColumn Header="Фамилия" 
									Width="150" 
									DisplayMemberBinding="{Binding Path=SurName}"/>
					<GridViewColumn Header="Имя" 
									Width="100" 
									DisplayMemberBinding="{Binding Path=Name}"/>
					<GridViewColumn Header="Возраст" 
									Width="50" 
									DisplayMemberBinding="{Binding Path=Age}"/>
					<GridViewColumn Header="Зарплата" 
									Width="80" 
									DisplayMemberBinding="{Binding Path=Salary}"/>
					<GridViewColumn Header="Ставка в час" 
									Width="80" 
									DisplayMemberBinding="{Binding Path=OneHourSalary, StringFormat={} {0:f2}}"/>
				</GridView>
			</ListView.View>
		</ListView>
		<Button x:Name="AddWorker"
				Content="+"
				HorizontalAlignment="Left"
				Margin="179,15,0,0"
				VerticalAlignment="Top"
				Width="17" RenderTransformOrigin="1.118,0.4" 
				Click="AddWorker_Click"/>
		<Button x:Name="DelWorker"
				Content="-"
				HorizontalAlignment="Left"
				Margin="196,15,0,0"
				VerticalAlignment="Top"
				Width="17" RenderTransformOrigin="1.706,0.55"/>
	</Grid>
</Window>
